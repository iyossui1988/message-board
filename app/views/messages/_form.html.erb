<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
    <div class="form-group"> 
      <label for="message_name" class="control-label col-md-2">名前:</label>
      <div class="col-md-4">
        <%= f.text_field :name, :class=>"form-control", :size => "20×10", :placeholder=>"名前を入力" %>
      </div>  
    </div>
    <div class="form-group"> 
      <label for="message_name" class="control-label col-md-2">内容:</label>
      <div class="col-md-4">
        <%= f.text_area :body, :class=>"form-control",  :size => "60×10", :placeholder=>"メッセージを入力" %>
      </div>
    </div>  
    <div class="form-group"> 
      <label for="message_name" class="control-label col-md-2">年齢:</label>
      <div class="col-md-4">
        <%= f.text_field :age, :class=>"form-control",  :size => "10×10", :placeholder=>"年齢(数字)を入力" %>
      </div>
    </div>  
    <div class="form-group"> 
      <div class="col-sm-offset-2 col-md-4">
        <%= f.submit class:"btn btn-sm btn-primary"%>
      </div>
    </div>
</form>

<% if @message.errors.present? %>

  <div class="alert alert-danger">
    <%= alert %>
    <ul>
      <% @message.errors.full_messages.each do |full_message| %>
        <li>
          <%= full_message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<% end %>